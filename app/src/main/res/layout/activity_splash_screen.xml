<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bggradasi"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/image"
        android:scaleType="fitXY"
        android:src="@drawable/bannerandroid400"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/img"
        android:layout_centerInParent="true"
        android:fontFamily="@font/convergence"
        android:shadowColor="@color/material_light_black"
        android:shadowDx="1.8"
        android:shadowDy="1.5"
        android:shadowRadius="2.0"
        android:text="Assalamuâ€™alaikum \n Warahmatullaahi \n Wabarakaatuh"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />


    <ImageView



        android:src="@drawable/bannerandroid200"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img"
       android:layout_centerInParent="true"
        />


</RelativeLayout>