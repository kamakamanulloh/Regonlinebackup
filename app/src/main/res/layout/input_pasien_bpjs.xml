    <!--            android:id="@+id/jns_kontrol"-->
    <!--            android:entries="@array/bpjs"-->

    <!--            android:layout_marginBottom="@dimen/activity_horizontal_margin"-->
    <!--            />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Rujukan"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/norujukan"
        android:inputType="text"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <Button

        android:id="@+id/btn_kepesertaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Cek Kepesertaan"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Nama Peserta"
        android:visibility="visible" />
    <EditText
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtnamapeserta"
        android:editable="false"

        android:inputType="none"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Peserta"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtstatuspeserta"
        android:editable="false"
        android:visibility="visible"
        android:inputType="none"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Peserta"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtjenispeserta"
        android:editable="false"

        android:inputType="none"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asal Faskes"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtfaskespeserta"
        android:editable="false"

        android:inputType="none"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />






</LinearLayout>