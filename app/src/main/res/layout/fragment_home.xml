<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_marginBottom="40dp"


    tools:context=".ui.home.HomeFragment" >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/bannerandroid300"
                    />
                <EditText
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/et_style"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="40dp"
                    android:hint="cari dokter"
                    android:editable="false"
                    android:id="@+id/et_cari"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    />



            </FrameLayout>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/card"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="#fff"

                app:cardCornerRadius="10dp"


                app:cardElevation="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Antrian Anda"
                        android:id="@+id/tvTitleNo"
                        android:textSize="12sp"
                        android:fontFamily="@font/arimo_bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/tvNoAntrian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:fontFamily="@font/varela_round"
                        android:textColor="@color/primaryTextColor"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:id="@+id/btn_qrcode"
                            android:text="@string/tampilkan_barcode"
                            android:padding="5dp"
                            android:drawableEnd="@drawable/ic_qr_code"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:background="@drawable/button_transparant"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/btn_antrian"


                            android:text="Cek \n Antrian"
                            android:padding="5dp"

                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:background="@drawable/button_transparant2"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_below="@+id/card"
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnumum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"

                    android:background="#fff"

                    app:cardCornerRadius="10dp"


                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_registrasi" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Registrasi"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"

                            android:text="Pendaftaran Pasien"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/infolayanan"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="#fff"

                    app:cardCornerRadius="10dp"


                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_doctor" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Jadwal Dokter"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"

                            android:text="Informasi Pelayanan"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"

                android:layout_below="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2">
                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"

                    app:cardCornerRadius="10dp"
                    android:id="@+id/bukti_reg"

                    app:cardElevation="5dp"


                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_nomor_registrasi"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="16sp"
                            android:text="Bukti Registrasi"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="12sp"
                            android:text="Cek Bukti Pendaftaran"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/webrs"
                    android:layout_marginLeft="5dp"

                    app:cardCornerRadius="10dp"

                    app:cardElevation="5dp"


                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_hospital"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="16sp"
                            android:text="Rumah Sakit"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="12sp"
                            android:text="Lihat Profil Rumah Sakit"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/line3"
                android:layout_below="@id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"

                    android:id="@+id/btnpetunjuk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:cardCornerRadius="10dp"

                    app:cardElevation="5dp"


                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_petunjuk"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="16sp"
                            android:text="Petunjuk"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="12sp"
                            android:text="Petunjuk Penggunaan Aplikasi"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"

                    app:cardCornerRadius="10dp"
                    android:id="@+id/btnketentuan"

                    app:cardElevation="5dp"


                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/faq"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Ketentuan"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="12sp"
                            android:text="Syarat dan Ketentuan Pasien"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>





