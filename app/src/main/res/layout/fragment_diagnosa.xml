<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".diagnosa.DiagnosaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:text="Riwayat Diagnosa"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:id="@+id/tvrm_"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih No. Rekam Medik"/>

    <Spinner
        android:layout_marginStart="5dp"
        android:id="@+id/spinner_rm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/tvrm_"
        />


    <TextView
        android:id="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner_rm"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="No Rekam Medik tidak ditemukan ?"/>


    <TextView
        android:layout_below="@id/spinner_rm"
        android:layout_toEndOf="@id/txt"
        android:id="@+id/btn_rm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/navy_blue.primary"
        android:text=" klik di sini"/>




    <TextView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:id="@+id/tvpasien"
        android:layout_below="@id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text=""/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cari"
        android:background="@drawable/button_background_blue"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvpasien"
        android:text="Cari"
        android:textColor="@color/white"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        tools:listitem="@layout/item_diagnosa"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_cari"
        android:layout_marginBottom="40px"
        >
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>